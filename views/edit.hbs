<form action="/todos/{{todo._id}}?_method=PUT" method="POST" style="display:inline">
  <div class="input-group">
    <div class="input-group-text">
      <input type="checkbox" name="isDone" {{#if todo.isDone}} checked {{/if}}>
    </div>
    <input type="text" class="form-control" placeholder="list name" name="name" value="{{todo.name}}">
    <button class="btn btn-success" type="submit">Save</button>
  </div>
</form>