<h1>Edit Page</h1>

<form action="/todos/{{todo._id}}/edit" method="POST">
  <input type="checkbox" name="isDone" {{#if todo.isDone}} checked {{/if}}>
  <input
    type="text"
    placeholder="list name"
    name="name"
    value="{{todo.name}}"
  />
  <button type="submit">Save</button>
  <a href="/">back index page</a>
</form>