<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todo List</title>
    <link href="https://bootswatch.com/5/united/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
  </head>

  <header>
    <nav class="navbar navbar-dark bg-primary justify-content-between" style="padding: 8px 16px"> 
      <a class="btn btn-outline-light" href="/">
        {{#if isAuthenticated}}
          {{user.name}}'s 
        {{/if}}
        Todo List
      </a>
      
      {{#if isAuthenticated}}
        <a class="btn btn-outline-light" href="/users/logout">Logout</a>
      {{else}}
        <a class="btn btn-outline-light" href="/users/login">Login</a>
      {{/if}}
    </nav>
  </header>

  <body class="bg-light">
    <div class="container mt-3">
      {{{body}}}
    </div>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>